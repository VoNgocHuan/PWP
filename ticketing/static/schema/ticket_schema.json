{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Ticket",
  "type": "object",
  "additionalProperties": false,
  "required": ["event_id", "name", "price", "capacity", "remaining"],
  "properties": {
    "id": {
      "type": "integer",
      "readOnly": true
    },
    "event_id": {
      "type": "integer",
      "description": "Foreign key referencing Event.id"
    },
    "name": {
      "type": "string",
      "maxLength": 100,
      "minLength": 1
    },
    "price": {
      "type": "number",
      "minimum": 0
    },
    "capacity": {
      "type": "integer",
      "minimum": 0
    },
    "remaining": {
      "type": "integer",
      "minimum": 0,
      "description": "Must not exceed capacity"
    }
  }
}